{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Sunday morning",
  "action": {
    "default_icon": "primary-logo.png",
     "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "cookies",
    "storage"
  ],
  "host_permissions": [
   "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "32": "primary-logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["primary-logo.png", "*.css", "*.scss", "*.ts", "*.tsx", "*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
